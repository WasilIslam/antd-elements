{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "jsx": "react",
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "lib": ["dom", "es2015", "es2016", "es2017"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  